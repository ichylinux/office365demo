<h2>メールボックス</h2>
<table class="table">
  <thead class="thead-light">
    <th scope="col">送信者</th>
    <th scope="col">件名</th>
    <th scope="col">受信日時</th>
  </thead>
  <tbody>
    {{#each messages}}
      <tr class="{{#unless this.isRead}}table-primary{{/unless}}">
        <td title="{{this.from.emailAddress.address}}">{{this.from.emailAddress.name}}</td>
        <td>{{this.subject}}</td>
        <td>{{this.receivedDateTime}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>